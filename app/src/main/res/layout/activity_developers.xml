<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/materialBlue"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developers">

    <TextView
        android:transitionName="Google"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/developerButton"
        android:textColor="@color/white"
        android:layout_marginBottom="-7dip"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
        android:paddingStart="15dip"
        android:paddingEnd="15dip"
        android:textSize="16sp"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="5dip"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet the developers"/>

    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
    android:layout_weight="0.8"
    android:background="@color/materialBlue"
    android:layout_width="match_parent"
    android:layout_height="0dip">


</LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dip">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="40dip"
            android:layout_width="150dip"
            android:id="@+id/viduujain"
            android:layout_height="150dip"
            android:src="@drawable/viduujain"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/materialBlue"/>

    </LinearLayout>
</LinearLayout>