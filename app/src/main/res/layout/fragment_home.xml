
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginTop="15dip"
        android:layout_marginStart="15dip"
        android:layout_marginEnd="15dip"
        android:layout_marginBottom="9dip"
        app:cardCornerRadius="5dip"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout

                android:layout_margin="15dip"
                android:orientation="vertical"
                android:layout_marginTop="25dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:src="@drawable/tt_card"/>

                <TextView
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGrey"
                    android:text="Welcome to Manipal University Jaipur"/>




                <LinearLayout

                    android:layout_marginTop="25dip"
                    android:layout_marginStart="15dip"
                    android:layout_marginEnd="15dip"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/webredirect"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/web"
                            android:layout_width="30dip"
                            android:layout_height="30dip" />
                        <TextView
                            android:alpha="0.9"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/materialBlue"
                            android:text="Visit Website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/QRCode"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/scan"
                            android:layout_width="30dip"
                            android:layout_height="30dip" />
                        <TextView
                            android:alpha="0.9"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/materialBlue"
                            android:text="Scan QR Code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/DialogueFlow"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/chat"
                            android:layout_width="30dip"
                            android:layout_height="30dip" />
                        <TextView
                            android:alpha="0.9"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/materialBlue"
                            android:text="Talk to MUJ Bot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>









    <android.support.v7.widget.CardView
        android:layout_marginTop="7dip"
        android:layout_marginStart="15dip"
        android:layout_marginEnd="15dip"
        android:layout_marginBottom="15dip"
        app:cardCornerRadius="5dip"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_margin="15dip"
                android:orientation="vertical"
                android:layout_marginTop="25dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tt_intro"/>



                <TextView

                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/developerButton"
                    android:textColor="@color/white"
                    android:layout_marginBottom="-7dip"
                    android:paddingTop="6dip"
                    android:paddingBottom="6dip"
                    android:paddingStart="15dip"
                    android:paddingEnd="15dip"
                    android:textSize="15sp"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginTop="15dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet the developers"/>


                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                    </LinearLayout>




                </LinearLayout>





            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
