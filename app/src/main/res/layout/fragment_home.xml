
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginTop="15dip"
        android:layout_marginStart="15dip"
        android:layout_marginEnd="15dip"
        android:layout_marginBottom="9dip"
        app:cardCornerRadius="5dip"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_margin="15dip"
                android:orientation="vertical"
                android:layout_marginTop="25dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:src="@drawable/tt_card"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGrey"
                    android:text="Welcome to Manipal University Jaipur"/>


                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/QRCode"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:paddingTop="3dip"
                            android:paddingBottom="3dip"
                            android:background="@drawable/roundbutt"
                            android:layout_width="wrap_content"
                            android:layout_height="27dip">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:paddingStart="10dip"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scan QR Code"/>
                            <ImageView
                                android:tint="@color/white"
                                android:layout_marginStart="9dip"
                                android:layout_marginEnd="3dip"
                                android:layout_width="22dip"
                                android:layout_height="22dip"
                                android:src="@drawable/qrcode"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/DialogueFlow"
                            android:paddingTop="3dip"
                            android:paddingBottom="3dip"
                            android:layout_marginStart="3dip"
                            android:background="@drawable/roundbutt_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="27dip">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:paddingStart="10dip"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Talk To MU Bot"/>
                            <ImageView
                                android:tint="@color/white"
                                android:layout_marginStart="9dip"
                                android:layout_marginEnd="3dip"
                                android:layout_width="22dip"
                                android:layout_height="22dip"
                                android:src="@drawable/mic"/>

                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>





            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>









    <android.support.v7.widget.CardView
        android:layout_marginTop="7dip"
        android:layout_marginStart="15dip"
        android:layout_marginEnd="15dip"
        android:layout_marginBottom="15dip"
        app:cardCornerRadius="5dip"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_margin="15dip"
                android:orientation="vertical"
                android:layout_marginTop="25dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tt_intro"/>



                <TextView

                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/developerButton"
                    android:textColor="@color/white"
                    android:layout_marginBottom="-7dip"
                    android:paddingTop="6dip"
                    android:paddingBottom="6dip"
                    android:paddingStart="15dip"
                    android:paddingEnd="15dip"
                    android:textSize="15sp"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginTop="15dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet the developers"/>


                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                    </LinearLayout>




                </LinearLayout>





            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
