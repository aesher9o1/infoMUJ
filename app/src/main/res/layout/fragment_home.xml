

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="65dip">

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="15dip"
        android:layout_marginStart="15dip"
        android:layout_marginEnd="15dip"
        android:layout_marginBottom="9dip"
        app:cardCornerRadius="5dip"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="15dip"
                android:orientation="vertical"
                android:layout_marginTop="25dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/domePhoto"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    />

                <TextView
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGrey"
                    android:text="@string/welcome"/>




                <LinearLayout
                    android:layout_marginTop="25dip"
                    android:layout_marginStart="7dip"
                    android:layout_marginEnd="7dip"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/webredirect"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/manipalVR"
                            android:layout_width="30dip"
                            android:layout_height="30dip" />
                        <TextView

                            android:alpha="0.9"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/materialBlue"
                            android:text="@string/camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/QRCode"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/qrScan"
                            android:layout_width="30dip"
                            android:layout_height="30dip" />
                        <TextView
                            android:gravity="center_horizontal"
                            android:alpha="0.9"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/materialBlue"
                            android:text="@string/qrCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/DialogueFlow"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/bot"
                            android:layout_width="30dip"
                            android:layout_height="30dip" />
                        <TextView
                            android:gravity="center_horizontal"
                            android:alpha="0.9"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/materialBlue"
                            android:text="@string/bot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

    </android.support.v7.widget.CardView>









    <android.support.v7.widget.CardView
        android:layout_marginTop="7dip"
        android:layout_marginStart="15dip"
        android:layout_marginEnd="15dip"
        android:layout_marginBottom="15dip"
        app:cardCornerRadius="5dip"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="15dip"
                android:orientation="vertical"
                android:layout_marginTop="25dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/developersWorking"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tt_intro"/>

                <TextView
                    android:transitionName="Google"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/developerButton"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dip"
                    android:paddingTop="6dip"
                    android:paddingBottom="6dip"
                    android:paddingStart="15dip"
                    android:paddingEnd="15dip"
                    android:textSize="16sp"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginTop="15dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet the developers"/>

            </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>