<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:animateLayoutChanges="true"
    app:cardCornerRadius="13dip"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:paddingStart="15dip"
        android:orientation="vertical"
        android:layout_marginTop="15dip"
        android:paddingEnd="15dip"
        android:layout_marginBottom="15dip"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rate"
            android:gravity="center"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="6dip"
            android:layout_marginStart="25dip"
            android:layout_marginEnd="25dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="right"
                android:layout_weight="0.3"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginEnd="24dip"
                    android:tint="@color/lightGrey"
                    android:src="@drawable/ic_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="start"
                android:layout_weight="0.7"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginStart="15dip"
                    android:textColor="@color/lightGrey"
                    android:text="Rate us on Google Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/muj"
            android:foreground="?selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginTop="25dip"
            android:layout_marginBottom="10dip"
            android:layout_marginStart="25dip"
            android:layout_marginEnd="25dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="right"
                android:layout_weight="0.3"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/heart"
                    android:layout_marginEnd="24dip"
                    android:tint="@color/materialRed"
                    android:src="@drawable/ic_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="start"
                android:layout_weight="0.7"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="16sp"
                    android:layout_marginStart="15dip"
                    android:textColor="@color/lightGrey"
                    android:text="Download MUJ Files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/feedback"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="25dip"
            android:layout_marginBottom="10dip"
            android:layout_marginStart="25dip"
            android:layout_marginEnd="25dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <LinearLayout
             android:gravity="right"
             android:layout_weight="0.3"
             android:layout_width="0dip"
             android:layout_height="wrap_content">
             <ImageView
                 android:layout_marginEnd="24dip"
                 android:tint="@color/lightGrey"
                 android:src="@drawable/ic_feedback"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
         </LinearLayout>
            <LinearLayout
                android:gravity="start"
                android:layout_weight="0.7"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginStart="15dip"
                    android:textColor="@color/lightGrey"
                    android:text="Drop us a feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>





    </LinearLayout>

</android.support.v7.widget.CardView>